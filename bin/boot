#!/bin/sh -e

################################################################################
boot () {
  npm install git://pmade.com/mockapie
  npm install jshint

  sed 's|./../|../node_modules/mockapie/|' \
      < node_modules/mockapie/bin/mockapie \
      > bin/server.js

  chmod 755 bin/server.js

  sed 's|../src|../node_modules/jshint/src|' \
      < node_modules/.bin/jshint             \
      > bin/jshint

  chmod 755 bin/jshint
}

################################################################################
boot
